<div class="container">

  <div class="jumbotron">
    <h1 class="text-center">Eat My Burger</h1>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4" id="cburger">

      <h2>Create a burger</h2>
      <form class="create-update-form" action="/" method="POST">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        <button class="btn btn-primary" type="submit">Add Burger</button>
        </div>

      </form>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Burgers to Eat</h3>
        </div>
        <div class="panel-body">

          <ul>
            {{#each burgers}} {{#unless this.devoured}}
            <li>
              <div>

              <span class='lead'>{{this.burger_name}}</span>

              <form action="/{{this.id}}?_method=PUT" method="POST" style="display: inline;">
                <input type="hidden" name="devoured" value="true">
                <button class="btn btn-success" type="submit">Eat!</button>
              </form>
              </div>
            </li>
            {{/unless}} {{/each}}
          </ul>
        </div>
      </div>

    </div>

    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Burgers I've Eaten</h3>
        </div>
        <div class="panel-body">

          <ul>
            {{#each burgers}} {{#if this.devoured}}
            <li>
              {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST" style="display: inline;">
                <input type="hidden" name="devoured" value="false">
                <button class="btn btn-danger"type="submit">Throw up!</button>
              </form>
            </li>
            {{/if}} {{/each}}
          </ul>
        </div>
      </div>
    </div>




  </div>